{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Clean",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --target clean",
            "problemMatcher": []
        },
        {
            "label": "Clean Build Dir",
            "type": "shell",
            "command": "rm -r ${workspaceFolder}/build; mkdir ${workspaceFolder}/build",
            "problemMatcher": []
        },
        {
            "label": "Clean Build & ReBuild Project",
            "type": "shell",
            "command": "cmake -S ${workspaceFolder} -B ${workspaceFolder}/build",
            "dependsOn": [
                "Clean All"
            ],
            "problemMatcher": []
        },
    ]
}